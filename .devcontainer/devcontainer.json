// For format details, see https://aka.ms/devcontainer.json.
{
  "name": "carpeaqua theme",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:22-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "upgradePackages": true,
      "username": "node",
      "installOhMyZsh": false
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "csstools.postcss",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        "lifeart.vscode-glimmer-syntax",
        "TryGhost.ghost"
      ]
    }
  },
  "portsAttributes": {
    "2368": {
      "label": "Ghost Dev Server",
      "onAutoForward": "notify"
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/server/data,target=/home/node/ghost/content/data,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/server/files,target=/home/node/ghost/content/files,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/server/images,target=/home/node/ghost/content/images,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.devcontainer/server/media,target=/home/node/ghost/content/media,type=bind,consistency=cached"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/node/ghost/content/themes/carpeaqua-template,type=bind",
  "workspaceFolder": "/home/node/ghost/content/themes/carpeaqua-template",
  // Run user-level setup after the container is created. postCreateCommand usually runs as the remoteUser.
  "postCreateCommand": "./.devcontainer/scripts/post_create.sh",
  // Start Ghost after the container starts. Keep as postStartCommand to match previous behavior.
  "postStartCommand": "./.devcontainer/scripts/post_start.sh",
  // Connect as node user by default (matches prior setup).
  "containerUser": "node",
  "remoteUser": "node"
}
